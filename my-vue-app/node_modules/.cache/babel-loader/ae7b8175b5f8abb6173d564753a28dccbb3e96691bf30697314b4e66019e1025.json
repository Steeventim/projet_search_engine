 <div class=\"container mt-4\" style=\"max-width: 1200px; margin: 0 auto\">\n    <!-- Barre de navigation -->\n    <nav\n      class=\"navbar mb-4\"\n      style=\"background-color: #337ab7; padding: 10px; border-radius: 10px\"\n    >\n      <div class=\"navbar-brand\" style=\"color: #fff\">Document Search</div>\n      <div>\n        <button class=\"btn btn-light\" @click=\"goToLogin\">Connexion</button>\n        <!-- Ajoutez d'autres boutons si nécessaire -->\n      </div>\n    </nav>\n\n    <!-- Zone de recherche -->\n    <div\n      class=\"search-bar mb-4 d-flex\"\n      style=\"background-color: #f7f7f7; padding: 20px; border-radius: 10px\"\n    >\n      <!-- Ajout de la classe 'me-2' pour l'espacement -->\n\n      <input\n        v-model=\"input\"\n        @input=\"filterData\"\n        class=\"form-control me-2\"\n        placeholder=\"Search...\"\n        style=\"\n          height: 40px;\n          font-size: 16px;\n          padding: 10px;\n          border: 1px solid #ccc;\n        \"\n      />\n\n      <button\n        @click=\"searchDocuments\"\n        class=\"btn btn-primary\"\n        style=\"\n          height: 40px;\n          font-size: 16px;\n          padding: 10px;\n          border: none;\n          border-radius: 10px;\n          background-color: #337ab7;\n          color: #fff;\n        \"\n      >\n        Search\n      </button>\n    </div>\n\n    <!-- Liste des résultats -->\n    <div class=\"result-list\">\n      <div v-for=\"item in paginatedItems\" :key=\"item.id\" class=\"result-card\">\n        <div class=\"content\">\n          <!-- Titre sous forme de lien hypertexte -->\n          <h3>\n            <a\n              href=\"#\"\n              @click.prevent=\"openPdfInNewPage(item.virtualPath)\"\n              style=\"color: #337ab7; text-decoration: underline\"\n            >\n              {{ item.filename }}\n            </a>\n          </h3>\n          <p><strong>Created Date:</strong> {{ item.createdDate }}</p>\n          <!-- Bouton pour afficher plus de détails -->\n          <button\n            class=\"btn btn-secondary\"\n            @click=\"item.showDetails = !item.showDetails\"\n            style=\"\n              height: 30px;\n              font-size: 14px;\n              padding: 5px;\n              border: none;\n              border-radius: 5px;\n              background-color: #666;\n              color: #fff;\n            \"\n          >\n            {{\n              item.showDetails\n                ? \"Masquer les détails\"\n                : \"Afficher plus de détails\"\n            }}\n          </button>\n\n          <!-- Section détaillée cachée par défaut -->\n          <div v-if=\"item.showDetails\" class=\"details mt-2\">\n            <p><strong>Filesize:</strong> {{ item.filesize }} bytes</p>\n            <div\n              v-html=\"getHighlightedSnippet(item.highlight.content)\"\n              class=\"content-text mb-3\"\n            ></div>\n          </div>\n        </div>\n      </div>\n    </div>\n  </div>\n</template>\n\n<script>\nexport default {\n  data() {\n    return {\n      input: \"\", // Contient la valeur du champ de recherche\n      items: [], // Liste des documents obtenus après la recherche\n      currentPage: 1, // Page actuelle pour la pagination\n      itemsPerPage: 10, // Nombre d'éléments affichés par page\n      filteredItems: [], // Liste des documents après filtrage basé sur le terme de recherche\n      dropdownOpen: false, // État pour contrôler l'affichage du menu déroulant\n    };\n  },\n  methods: {\n    toggleDropdown() {\n      this.dropdownOpen = !this.dropdownOpen; // Bascule l'état du menu déroulant\n    },\n    goToLogin() {\n      // Remplacez cette ligne par la logique de redirection vers la page de connexion\n      console.log(\"Naviguer vers la page de connexion\");\n      this.dropdownOpen = false; // Ferme le menu après la sélection\n    },\n    goToSignup() {\n      // Remplacez cette ligne par la logique de redirection vers la page d'inscription\n      console.log(\"Naviguer vers la page d'inscription\");\n      this.dropdownOpen = false; // Ferme le menu après la sélection\n    },\n    async searchDocuments() {\n      try {\n        const response = await fetch(\n          \"http://localhost:3000/api/documents/search\",\n          {\n            method: \"POST\",\n            headers: {\n              \"Content-Type\": \"application/json\",\n            },\n            body: JSON.stringify({ query: this.input }),\n          }\n        );\n        const data = await response.json();\n        this.items = this.preprocessData(data);\n        this.filterData(); // Appliquer le filtre après la recherche\n      } catch (error) {\n        console.error(\"Erreur lors de la recherche:\", error);\n      }\n    },\n    preprocessData(data) {\n      return data.map((item) => ({\n        id: item._id,\n        content: item._source.content,\n        filename: item._source.file.filename,\n        filesize: item._source.file.filesize,\n        createdDate: new Date(item._source.file.created).toLocaleDateString(),\n        virtualPath: item._source.path.virtual,\n        highlight: item.highlight || { content: [] }, // Assurez-vous d'inclure les highlights\n        showDetails: false, // Par défaut, les détails sont cachés\n      }));\n    },\n    filterData() {\n      this.currentPage = 1;\n      if (this.input.trim() === \"\") {\n        this.filteredItems = this.items;\n      } else {\n        this.filteredItems = this.items.filter(\n          (item) =>\n            item.content.toLowerCase().includes(this.input.toLowerCase()) ||\n            item.filename.toLowerCase().includes(this.input.toLowerCase())\n        );\n      }\n    },\n    getHighlightedSnippet(text) {\n      if (Array.isArray(text)) {\n        text = text.join(\" \");\n      }\n      if (typeof text !== \"string\") {\n        return text;\n      }\n      if (this.input.trim()) {\n        const query = this.input.toLowerCase();\n        const regex = new RegExp(`(${query})`, \"gi\");\n        return text.replace(regex, \"<mark>$1</mark>\");\n      }\n      return text;\n    },\n    openPdfInNewPage(virtualPath) {\n      if (virtualPath) {\n        const searchTerm = this.input;\n        const pdfUrl = `http://localhost:3000/api/documents/files/fixedPages/${encodeURIComponent(\n          virtualPath\n        )}?searchTerm=${encodeURIComponent(searchTerm)}`;\n        window.open(pdfUrl, \"_blank\");\n      } else {\n        console.error(\"Le chemin virtuel n'est pas défini\");\n      }\n    },\n  },\n  computed: {\n    paginatedItems() {\n      const start = (this.currentPage - 1) * this.itemsPerPage;\n      const end = start + this.itemsPerPage;\n      return this.filteredItems.slice(start, end);\n    },\n    totalPages() {\n      return Math.ceil(this.filteredItems.length / this.itemsPerPage);\n    },\n  },\n};\n</script>\n\n<style scoped>\n.search-bar {\n  max-width: 600px;\n  margin: 0 auto;\n  display: flex; /* Aligner les éléments sur la même ligne */\n  align-items: center; /* Centrer verticalement */\n}\n\n.result-list {\n  display: flex;\n  flex-direction: column;\n  gap: 20px;\n}\n\n.result-card {\n  background-color: white;\n  padding: 20px;\n  border: 1px solid #ddd;\n  border-radius: 10px;\n  box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);\n}\n\n.content {\n  text-align: left;\n}\n\n.details {\n  background-color: #f9f9f9;\n  padding: 10px;\n  border-radius: 8px;\n}\n\n.content-text {\n  white-space: pre-wrap;\n  font-size: 14px;\n  color: #666;\n}\n\n.navbar {\n  display: flex;\n  justify-content: space-between;\n  align-items: center;\n}\n\n.dropdown-menu {\n  position: absolute;\n  background-color: white;\n  border: 1px solid #6bdf61;\n  border-radius: 5px;\n  margin-top: 5px;\n  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);\n}\n\n.dropdown-item {\n  padding: 10px;\n  cursor: pointer;\n  transition: background-color 0.3s;\n}\n\n.dropdown-item:hover {\n  background-color: #f0f0f0;\n}\n</style>\n"],"mappings":";;EACOA,KAAK,EAAC,gBAAgB;EAACC,KAAyC,EAAzC;IAAA;IAAA;EAAA;;;EAGxBD,KAAK,EAAC,aAAa;EACnBC,KAAqE,EAArE;IAAA;IAAA;IAAA;EAAA;;;EAWAD,KAAK,EAAC,wBAAwB;EAC9BC,KAAqE,EAArE;IAAA;IAAA;IAAA;EAAA;;;EAmCGD,KAAK,EAAC;AAAa;;EAEfA,KAAK,EAAC;AAAS;mBAtD5B;mBAAA;;EAAAE,GAAA;EAwFuCF,KAAK,EAAC;;mBAxF7C;;uBACEG,mBAAA,CAiGM,OAjGNC,UAiGM,GAhGJC,mBAAA,yBAA4B,EAC5BC,mBAAA,CASM,OATNC,UASM,G,0BALJD,mBAAA,CAAmE;IAA9DN,KAAK,EAAC,cAAc;IAACC,KAAmB,EAAnB;MAAA;IAAA;KAAoB,iBAAe,sBAC7DK,mBAAA,CAGM,cAFJA,mBAAA,CAAmE;IAA3DN,KAAK,EAAC,eAAe;IAAEQ,OAAK,EAAAC,MAAA,QAAAA,MAAA,UAAAC,IAAA,KAAEC,QAAA,CAAAC,SAAA,IAAAD,QAAA,CAAAC,SAAA,IAAAF,IAAA,CAAS;KAAE,WAAS,GAC1DL,mBAAA,4CAA+C,C,KAInDA,mBAAA,uBAA0B,EAC1BC,mBAAA,CAkCM,OAlCNO,UAkCM,GA9BJR,mBAAA,iDAAoD,E,gBAEpDC,mBAAA,CAWE;IAhCR,uBAAAG,MAAA,QAAAA,MAAA,MAAAK,MAAA,IAsBiBC,KAAA,CAAAC,KAAK,GAAAF,MAAA;IACbG,OAAK,EAAAR,MAAA,QAAAA,MAAA,UAAAC,IAAA,KAAEC,QAAA,CAAAO,UAAA,IAAAP,QAAA,CAAAO,UAAA,IAAAR,IAAA,CAAU;IAClBV,KAAK,EAAC,mBAAmB;IACzBmB,WAAW,EAAC,WAAW;IACvBlB,KAKC,EALD;MAAA;MAAA;MAAA;MAAA;IAAA;iEAJSc,KAAA,CAAAC,KAAK,E,GAYhBV,mBAAA,CAcS;IAbNE,OAAK,EAAAC,MAAA,QAAAA,MAAA,UAAAC,IAAA,KAAEC,QAAA,CAAAS,eAAA,IAAAT,QAAA,CAAAS,eAAA,IAAAV,IAAA,CAAe;IACvBV,KAAK,EAAC,iBAAiB;IACvBC,KAQC,EARD;MAAA;MAAA;MAAA;MAAA;MAAA;MAAA;MAAA;IAAA;KASD,UAED,E,GAGFI,mBAAA,yBAA4B,EAC5BC,mBAAA,CA6CM,OA7CNe,UA6CM,I,kBA5CJlB,mBAAA,CA2CMmB,SAAA,QAhGZC,WAAA,CAqD0BZ,QAAA,CAAAa,cAAc,EAAtBC,IAAI;yBAAhBtB,mBAAA,CA2CM;MA3C+BD,GAAG,EAAEuB,IAAI,CAACC,EAAE;MAAE1B,KAAK,EAAC;QACvDM,mBAAA,CAyCM,OAzCNqB,UAyCM,GAxCJtB,mBAAA,yCAA4C,EAC5CC,mBAAA,CAQK,aAPHA,mBAAA,CAMI;MALFsB,IAAI,EAAC,GAAG;MACPpB,OAAK,EA3DpBqB,cAAA,CAAAf,MAAA,IA2D8BH,QAAA,CAAAmB,gBAAgB,CAACL,IAAI,CAACM,WAAW;MACjD9B,KAAkD,EAAlD;QAAA;QAAA;MAAA;wBAEGwB,IAAI,CAACO,QAAQ,wBA9D9BC,UAAA,E,GAiEU3B,mBAAA,CAA4D,Y,0BAAzDA,mBAAA,CAA8B,gBAAtB,eAAa,sBAjElC4B,gBAAA,CAiE2C,GAAC,GAAAC,gBAAA,CAAGV,IAAI,CAACW,WAAW,iB,GACrD/B,mBAAA,0CAA6C,EAC7CC,mBAAA,CAkBS;MAjBPN,KAAK,EAAC,mBAAmB;MACxBQ,OAAK,EAAAM,MAAA,IAAEW,IAAI,CAACY,WAAW,IAAIZ,IAAI,CAACY,WAAW;M